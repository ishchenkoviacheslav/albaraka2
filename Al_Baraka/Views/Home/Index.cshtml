@using Al_Baraka.Models;
@model List<List<Product>>

    <div id="amazingcarousel-container-1" style="padding-left:10px;padding-right:10px;padding-top:10px;padding-bottom:10px">
        <div id="amazingcarousel-1" style="display:none;position:relative;width:100%;margin:0px;">
            <div class="amazingcarousel-list-container">
                <ul class="amazingcarousel-list">

                    @for (int i = 0; i < Model[0].Count; i++)
                    {
                        var base64 = Convert.ToBase64String(Model[0][i].Image);
                        var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
                        <li class="amazingcarousel-item">
                            <div class="amazingcarousel-item-container">
                                <div class="amazingcarousel-image">
                                    <a asp-area="" asp-controller="Home" asp-action="Details" asp-route-IdProduct="@Model[0][i].Id">
                                        <img src="@imgSrc" />
                                    </a>
                                </div>
                                <h5><a asp-area="" asp-controller="Home" asp-action="Details" asp-route-IdProduct="@Model[0][i].Id"> @Model[0][i].Name </a></h5>
                                @*<div class="amazingcarousel-title">@Model[0][i].Name</div>*@
                                <div class="amazingcarousel-description">
                                    <p class="text-danger">
                                        Ціна: @Model[0][i].Price за
                                        @switch (Model[0][i].Measure)
                                        {
                                            case measure.kg:
                                                <text>кг.</text>
                                                break;
                                            case measure.gramm:
                                                <text>гр.</text>
                                                break;
                                            case measure.liter:
                                                <text>літр</text>
                                                break;
                                            case measure.mililiter:
                                                <text>мл.</text>
                                                break;
                                            case measure.сanister:
                                                <text>каністру</text>
                                                break;
                                            case measure.box:
                                                <text>коробку</text>
                                                break;
                                            case measure.bottle:
                                                <text>пляшку</text>
                                                break;
                                            case measure.packet:
                                                <text>пачку</text>
                                                break;
                                            case measure.piece:
                                                <text>шт.</text>
                                                break;
                                            case measure.bag:
                                                <text>мішок</text>
                                                break;
                                            default:
                                                break;
                                        }
                                    </p>
                                </div>
                                <p>@Model[0][i].Description.Substring(0, (Model[0][i].Description.Length > 27 ? 27 : Model[0][i].Description.Length)) ..</p>
                                @*<div class="amazingcarousel-readmore"><a href="~/images/_vyr_40olivki-zelenye-s-kostochkojj-Vittoria-Giganti-italija-500-hr-lightbox.jpg" target="__TARGET__">Read More</a></div>*@
                            </div>
                        </li>
                    }

                </ul>
                <div class="amazingcarousel-prev"></div>
                <div class="amazingcarousel-next"></div>
            </div>
        </div>
    </div>

